<html>
	<head>
		<title>Arthur Carvalho dos Santos</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="assets/stylesheets/main.css" />
	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<h1><strong><%= link_to 'Arthur', inicio_path %></strong> Carvalho dos Santos</h1>
				<nav id="nav">
					<ul>
						<li><%= link_to 'Início', inicio_path %></li>
						<li><%= link_to 'Controle de Gastos', controle_gastos_path %></li>
						<li><%= link_to 'Log de Mergulhos', logs_mergulho_path %></li>

					</ul>
				</nav>
			</header>

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">

					<header class="major special">
						<h2>Controle de Gastos</h2>

						<div class="js_fazer_lancamento">
							<a class="button">Fazer Lançamento</a>
						</div>

						<div class="js_novos_lancamentos">
							
						</div>
					</header>

					<div class="table-wrapper">
					<table class="alt" style="text-align: center;">
						<thead>
							<tr>
								<th><h4 style="text-align: center;">Recebimentos</h4></th>
								<th><h4 style="text-align: center;">Gasto Diário Médio</h4></th>
								<th><h4 style="text-align: center;">Gasto Total</h4></th>
								<th><h4 style="text-align: center;">Saldo</h4></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>R$880.00</td>
								<td>R$20.00</td>
								<td>R$20.00</td>
								<td>R$860.00</td>
							</tr>
					</table>

					<div class="table-wrapper">
						<table>
							<thead>
								<tr>
									<th>Dia</th>
									<th>Descrição</th>
									<th>Tipo</th>
									<th>Pagamento</th>
									<th>Valor</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Almoço</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-mastercard fa-lg" aria-hidden="true"></i> Nubank (Crédito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Lanche</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-mastercard fa-lg" aria-hidden="true"></i> Itau (Débito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Janta</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-amex fa-lg" aria-hidden="true"></i> AmEx (Crédito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Janta</td>
									<td>Alimentação</td>
									<td><i class="fa fa-money fa-lg" aria-hidden="true"></i> Dinheiro</td>
									<td>R$29.99</td>
								</tr>
							</tbody>
						</table>

				</div>
			</section>
	</body>
</html>

<script type="text/javascript" charset="utf8">

$(function(){
     $('.js_fazer_lancamento').click(function (event) {
     	console.log('Clicou')
        var html =  "<div class='div_contato novo_contato'>";
            html += "  <div class='row'>";
            html += "     <div class='col-lg-5'>";
            html += "       <input type='text' name='contatos[]descricao' placeholder='Descrição' class='form-control' />";
            html += "     </div>";
            html += "     <div class='col-lg-5'>";
            html += "       <input type='text' name='contatos[]numero' placeholder='Digite o número' class='form-control js_campo_numero' />";
            html += "     </div>";
            html += "     <div class='col-lg-2'>";
            html += "       <i class='fa fa-times js_remover_contato' style='color:rgb(183, 7, 7);cursor:pointer'></i>";
            html += "     </div>";
            html += "  </div>";
            html += "<div>";
        
        html = $(html);
        $(".js_novos_lancamentos").append(html);

    });
});     
	
</script>