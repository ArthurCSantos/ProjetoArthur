<html>
	<head>
		<title>Generic - Spatial by TEMPLATED</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<script src="//plentz.github.io/jquery-maskmoney/javascripts/jquery.maskMoney.min.js"></script>
	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<h1><strong><%= link_to 'Arthur', inicio_path %></strong> Carvalho dos Santos</h1>
				<nav id="nav">
					<ul>
						<li><%= link_to 'Início', inicio_path %></li>
						<li><%= link_to 'Controle de Gastos', resumo_mensal_path %></li>
						<li><%= link_to 'Log de Mergulhos', logs_mergulho_path %></li>

					</ul>
				</nav>
			</header>

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">

					<header class="major special">
						<h3>Fazer Lançamentos</h3>
						<% case Time.now.month %>
							<% when 1 %>
								<p>Janeiro, <%= Time.now.year %></p>
							<% when 2 %>
								<p>Fevereiro, <%= Time.now.year %></p>
							<% when 3 %>
								<p>Março, <%= Time.now.year %></p>
							<% when 4 %>
								<p>Abril, <%= Time.now.year %></p>
							<% when 5 %>
								<p>Maio, <%= Time.now.year %></p>
							<% when 6 %>
								<p>Junho, <%= Time.now.year %></p>
							<% when 7 %>
								<p>Julho, <%= Time.now.year %></p>
							<% when 8 %>
								<p>Agosto, <%= Time.now.year %></p>
							<% when 9 %>
								<p>Setembro, <%= Time.now.year %></p>
							<% when 10 %>
								<p>Outubro, <%= Time.now.year %></p>
							<% when 11 %>
								<p>Novembro, <%= Time.now.year %></p>
							<% when 12 %>
								<p>Dezembro, <%= Time.now.year %></p>
						<% end %>
					</header>
				</div>
			</section>
			
			</section id="form" class="wrapper">
				<%= form_tag criar_lancamentos_path, method: 'post' do %>
					<div class="container js_adicionar_lancamento">
						<a class="button">Adicionar lançamento</a>
					</div>

					<br>

					<div class="container table-wraper">
						<table id="tabela_novos_lancamentos">
									<tr>
										<th>Data</th>
										<th>Descrição</th>
										<th>Tipo</th>
										<th>Pagamento</th>
										<th>Valor</th>
										<th></th>
									</tr>
									
									<div class="container js_novos_lancamentos">
					
									</div>
						</table>
					</div>

					<div class="container">
						<%= button_tag 'Salvar' %>
					</div>
				<% end %>
			<section>
	</body>


</html>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
<script type="text/javascript">
	$(function(){
	    $('.js_adicionar_lancamento').click(function (event) {
	     	var table =  document.getElementById("tabela_novos_lancamentos");
	     	var row = table.insertRow(-1);
	     	var cell1 = row.insertCell(0);
	    	var cell2 = row.insertCell(1);
	    	var cell3 = row.insertCell(2);
	    	var cell4 = row.insertCell(3);
	    	var cell5 = row.insertCell(4);
	    	var cell6 = row.insertCell(5);

	    	cell1.innerHTML = "<%=j text_field_tag 'lancamentos[]data', Time.now.strftime("%d/%m/%Y"), class: 'js_data' %>";
	    	cell2.innerHTML = "<%=j text_field_tag 'lancamentos[]descricao', nil , placeholder:'Descrição' %>";
	    	cell3.innerHTML = "<%=j select_tag 'lancamentos[]tipo', options_for_select(Lancamento::TIPOS) %>";
	    	cell4.innerHTML = "<%=j select_tag 'lancamentos[]pagamento', options_for_select(Lancamento::FORMAS_PAGAMENTO) %>";
	    	cell5.innerHTML = "<%=j text_field_tag 'lancamentos[]valor', nil , placeholder:'Valor', class: 'js_currency' %>";
	    	cell6.innerHTML = "<i class='fa fa-times'></i>";
			
			$(".js_data").mask('00/00/0000');
			$(".js_currency").maskMoney({prefix:'R$ ', allowNegative: true, decimal:'.', affixesStay: false});

		});

    });
</script>

