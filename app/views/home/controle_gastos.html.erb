<html>
	<head>
		<title>Arthur Carvalho dos Santos</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="assets/stylesheets/main.css" />
	</head>
	<body>

		<!-- Header -->
			<header id="header">
				<h1><strong><%= link_to 'Arthur', inicio_path %></strong> Carvalho dos Santos</h1>
				<nav id="nav">
					<ul>
						<li><%= link_to 'Início', inicio_path %></li>
						<li><%= link_to 'Controle de Gastos', controle_gastos_path %></li>
						<li><%= link_to 'Log de Mergulhos', logs_mergulho_path %></li>

					</ul>
				</nav>
			</header>

			<a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">

					<header class="major special">
						<h2>Controle de Gastos</h2>
					</header>


					<div class="table-wrapper">
					<table class="alt" style="text-align: center;">
						<thead>
							<tr>
								<th><h4 style="text-align: center;">Recebimentos</h4></th>
								<th><h4 style="text-align: center;">Gasto Diário Médio</h4></th>
								<th><h4 style="text-align: center;">Gasto Total</h4></th>
								<th><h4 style="text-align: center;">Saldo</h4></th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>R$880.00</td>
								<td>R$20.00</td>
								<td>R$20.00</td>
								<td>R$860.00</td>
							</tr>
					</table>

					<div class="table-wrapper">
						<table>
							<thead>
								<tr>
									<th>Dia</th>
									<th>Descrição</th>
									<th>Tipo</th>
									<th>Pagamento</th>
									<th>Valor</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Almoço</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-mastercard fa-lg" aria-hidden="true"></i> Nubank (Crédito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Lanche</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-mastercard fa-lg" aria-hidden="true"></i> Itau (Débito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Janta</td>
									<td>Alimentação</td>
									<td><i class="fa fa-cc-amex fa-lg" aria-hidden="true"></i> AmEx (Crédito)</td>
									<td>R$29.99</td>
								</tr>
								<tr>
									<td><%= DateTime.now.to_date %></td>
									<td>Janta</td>
									<td>Alimentação</td>
									<td><i class="fa fa-money fa-lg" aria-hidden="true"></i> Dinheiro</td>
									<td>R$29.99</td>
								</tr>
							</tbody>
						</table>

				</div>
			</section>

		
		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>